@using WebAPI.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Page";
}
<head>
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<main class="app-main mt-4">
    <div class="app-content">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h4">Product Table</h1>
            <button class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#addProductModal">
                <i class="fas fa-plus"></i> Add New Product
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Tên</th>
                        <th scope="col">Thương hiệu</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Giá bán</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Brand</td>
                            <td>@product.Description</td>
                            <td>@product.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td>
                                <button class="btn btn-sm btn-gray"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editProductModal-@product.Id"
                                        onclick="populateEditModal(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(product)))">
                                    <i class="fas fa-edit"></i>
                                </button>

                               
                                @*Edit product form*@
                                <div class="modal fade" id="editProductModal-@product.Id" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <form asp-action="UpdateProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
                                                <input type="hidden" name="_method" value="PUT" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editProductModalLabel">Sửa sản phẩm</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="hidden" name="Id" value="@product.Id" />
                                                    <input type="hidden" name="CreatedAt" value="@product.CreatedAt" />
                                                  
                                                    <input type="hidden" name="Brand" value="@product.Brand" />
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="mb-3">
                                                                        <label for="editProductName-@product.Id" class="form-label">Tên sản phẩm</label>
                                                                        <input type="text" class="form-control" id="editProductName-@product.Id" name="Name" value="@product.Name" required>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="editProductDescription-@product.Id" class="form-label">Danh mục</label>
                                                                        <select class="form-control" id="editProductCategory-@product.Id" name="CategoryId" required>
                                                                              @foreach(var category in (IEnumerable<Category>)ViewBag.Categories)  {
                                                                                var selected = category.Id == @product.CategoryId ? "selected" : "";
                                                                                @:<option value="@category.Id" @selected>@category.Name</option>
                                                                              }
                                                                        </select>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="editProductPrice-@product.Id" class="form-label">Giá bán</label>
                                                                        <input type="number" class="form-control" id="editProductPrice-@product.Id" name="Price" value="@product.Price" required>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="editProductPrice-@product.Id" class="form-label">Khuyến mãi</label>
                                                                        <input type="number" class="form-control" id="editProductPromo-@product.Id" name="Promo" value="@product.Promo" required>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="mb-3">
                                                                        <label for="editProductImage-@product.Id" class="form-label">Hình ảnh</label>
                                                                        <input type="file" class="form-control" id="editProductImage-@product.Id" name="image"
                                                                               onchange="previewImage(this,'previewImage-@product.Id')">
                                                                        <!-- Hiển thị ảnh hiện tại -->
                                                                        <div class="mt-3 ">
                                                                            <label>Ảnh hiện tại:</label>
                                                                            <img src="data:image/png;base64,@product.Image" alt="Ảnh sản phẩm hiện tại"
                                                                                 class="img-fluid mt-2" id="previewImage-@product.Id"
                                                                                 style="max-height: 150px;min-width:150px; border: 1px solid #ccc; border-radius: 5px;margin-left:40px;">
                                                                        </div>
                                                                    </div>
                                                                    <div class="mb-3 mt-2">
                                                                        <label for="editProductDescription-@product.Id" class="form-label">Đơn vị</label>
                                                                        <input class="form-control" id="editProductUnit-@product.Id" name="Unit" value="@product.Unit" required>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="mb-3">
                                                                <label for="editProductDescription-@product.Id" class="form-label">Mô tả</label>
                                                                <textarea class="form-control" id="editProductDescription-@product.Id" name="Description" rows="3">@product.Description</textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="mb-3">
                                                                <label for="editProductColor-@product.Id" class="form-label">Màu và size</label>
                                                             </div>
                                                        </div>
                                                    </div>
                                                   
                                                   
                                                  
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                
                                <form asp-action="DeleteProduct" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*Add product form*@
        <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form asp-action="AddProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addProductModalLabel">Thêm sản phẩm</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="productName" class="form-label">Tên sản phẩm</label>
                                        <input type="text" class="form-control" id="productName" name="Name" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="productBrand" class="form-label">Thương hiệu</label>
                                        <input type="text" class="form-control" id="productBrand" name="Brand" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="editProductDescription" class="form-label">Danh mục</label>
                                        <select class="form-control" id="editProductCategory" name="CategoryId" required>
                                            @foreach(var category in (IEnumerable<Category>)ViewBag.Categories)  {
                                               <option value="@category.Id" >@category.Name</option>
                                            }
                                        </select>                                
                                     </div>                                  
                                    <div class="mb-3">
                                        <label for="productPrice" class="form-label">Giá bán</label>
                                        <input type="number" class="form-control" id="productPrice" name="Price" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="productImage" class="form-label">Hình ảnh</label>
                                        <input type="file" class="form-control mb-3" id="productImage" name="image" onchange="previewImage(this, 'previewImage-add')">
                                        <div class="d-flex justify-content-center"  style="height:160px; width:160px;margin-left:20px; border:1px solid #ccc;background: #ccc; border-radius:5px;">
                                            <img id="previewImage-add" class="img-fluid"  style="height:160px; width:160px; border-radius:5px;" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="productUnit" class="form-label">Đơn vị</label>
                                        <input type="text" class="form-control" id="productUnit" name="Unit" required>
                                    </div>
                                   
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="productDescription" class="form-label">Mô tả</label>
                                <textarea class="form-control" id="productDescription" name="Description" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
      </div>
    
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@if (TempData["ApiLog"] != null)
{
    <script>
        console.log("API Log: @TempData["ApiLog"]");
    </script>
}
<script>
    function populateEditModal(product) {
            // Gán dữ liệu vào các trường trong modal
            document.getElementById('editProductName-' + product.Id).value = product.Name;
            document.getElementById('editProductBrand-' + product.Id).value = product.Brand;
            document.getElementById('editProductDescription-' + product.Id).value = product.Description;
            document.getElementById('editProductPrice-' + product.Id).value = product.Price;
            document.getElementById('editProductUnit-' + product.Id).value = product.Unit;
            document.getElementById('editProductPromot-' + product.Id).value = product.Promo;
            // Hiển thị ảnh hiện tại nếu có
            const currentImage = document.querySelector(`#editProductModal img`);
            if (currentImage) {
                currentImage.src = 'data:image/png;base64,' + product.Image;
            }
    }
</script>

<script>
       function previewImage(input, previewImageId) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const previewImage = document.getElementById(previewImageId);
                if (previewImage) {
                    previewImage.src = e.target.result;
                } else {
                    console.error(`Không tìm thấy thẻ img với id ${previewImageId}`);
                }
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            console.error("Không có file nào được chọn!");
        }
    }

</script>